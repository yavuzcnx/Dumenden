{
  "expo": {
    "name": "Dümenden",
    "slug": "dumenden",
    "scheme": "dumenden",
    "version": "1.4.5",
    "orientation": "default",
    "userInterfaceStyle": "light",
    "icon": "./assets/images/icon.png",
    "splash": {
      "image": "./assets/images/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "androidStatusBar": {
      "translucent": true,
      "backgroundColor": "#00000000",
      "barStyle": "dark-content"
    },
    "androidNavigationBar": {
      "backgroundColor": "#00000000",
      "barStyle": "dark-content",
      "behavior": "inset-swipe"
    },
    "android": {
      "package": "com.dumenden.app",
      "versionCode": 44,
      "permissions": [
        "com.android.vending.BILLING",
        "com.google.android.gms.permission.AD_ID"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#FFFFFF"
      },
      "softwareKeyboardLayoutMode": "resize",
      "scheme": "dumenden",
      "platforms": [
        "ios",
        "android"
      ],
      "intentFilters": [
        {
          "action": "VIEW",
          "data": [
            {
              "scheme": "dumenden",
              "host": "*",
              "pathPattern": ".*"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ]
    },
   "ios": {
  "bundleIdentifier": "com.dumenden.app",
  "buildNumber": "11", 
  "infoPlist": {
    "NSAppTransportSecurity": {
      "NSAllowsArbitraryLoads": true
    },
    "NSUserTrackingUsageDescription": "Reklamları daha alakalı gösterebilmek için izleme iznine ihtiyaç duyuyoruz.",
    "SKAdNetworkItems": [
      {
        "SKAdNetworkIdentifier": "cstr6suwn9.skadnetwork"
      }
    ],
    "ITSAppUsesNonExemptEncryption": false
  }
},
    "plugins": [
      "expo-web-browser",
      [
        "react-native-google-mobile-ads",
        {
          "androidAppId": "ca-app-pub-3837426346942059~8256189809",
          "iosAppId": "ca-app-pub-3837426346942059~3638287941"
        }
      ],
      "expo-router",
      "expo-secure-store"
    ],
    "extra": {
      "eas": {
        "projectId": "b5bad7ff-9465-44fe-aaad-191ac9957eb7"
      }
    },
    "updates": {
      "enabled": false
    },
    "runtimeVersion": {
      "policy": "appVersion"
    },
    "experiments": {
      "typedRoutes": true
    }
  }
}
