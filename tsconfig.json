{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@app/*": ["app/*"],
      "~/*": ["src/*"]
    },
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "moduleResolution": "Bundler"
  },
  "include": ["**/*.ts", "**/*.tsx", "types/**/*.d.ts"]
}